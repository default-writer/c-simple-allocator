# Ninja build file generated from Makefile.linux

# Variables
cc = clang
cflags = -Wall -Wextra -std=c11 -g
ldflags = -fuse-ld=lld

# Rule for compiling .c files to .o
rule cc
  command = $cc $cflags -c -o $out $in
  description = Compiling $in

# Rule for linking .o files
rule link
  command = $cc $ldflags -o $out $in
  description = Linking $out

# Build statements for object files
build main.o: cc main.c
build alloc.o: cc src/rc/alloc.c
build bump_alloc.o: cc src/bump/alloc.c
build test.o: cc test.c

# Build statement for the executable
build main: link main.o alloc.o
build bump_alloc: link test.o bump_alloc.o
build test: link test.o alloc.o

# Default target
default main

# Clean rule
rule clean
  command = rm -f *.o main test 2>/dev/null || exit 0
  description = Clean
  generator = 1

build clean: clean
